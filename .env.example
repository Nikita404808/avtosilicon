# Backend configuration
DATABASE_URL=postgres://avtosilicon_user:YOUR_DB_PASSWORD@localhost:5432/avtosilicon_auth # replace YOUR_DB_PASSWORD with the real secret locally
PORT=3000
# Comma-separated list of allowed frontend origins for CORS
# Example (prod):
# FRONTEND_ORIGIN=https://автосиликон.рф,https://www.автосиликон.рф
FRONTEND_ORIGIN=https://автосиликон.рф,https://www.автосиликон.рф

# Frontend configuration
#
# Vite reads .env.development / .env.production automatically.
# For dev, prefer: VITE_AUTH_API_BASE=/api (with Vite proxy to backend :3000)
# For production: VITE_AUTH_API_BASE=https://автосиликон.рф/api
VITE_AUTH_API_BASE=/api
VITE_BANK_API_BASE=https://sandbox.ozonbank.ru/api
VITE_RECAPTCHA_SITE_KEY=YOUR_RECAPTCHA_SITE_KEY
#
# Directus base URL (should be proxied under the same domain in production)
VITE_DIRECTUS_URL=https://автосиликон.рф/directus
#
# (Legacy) Front base; keep in sync with FRONTEND_BASE_URL if used by scripts
APP_BASE_URL=https://автосиликон.рф

# MailerSend
MAILERSEND_API_KEY=your_mailersend_api_key
MAILERSEND_FROM_EMAIL=avtosilicon@example.com
MAILERSEND_FROM_NAME=Avtosilicon
#
# Frontend base for links in emails (password reset, etc.)
FRONTEND_BASE_URL=https://автосиликон.рф

# TTL
EMAIL_VERIFY_TTL_MIN=15
PASSWORD_RESET_TTL_MIN=30

# reCAPTCHA
RECAPTCHA_SECRET=YOUR_RECAPTCHA_SECRET  # серверная проверка

# Delivery: Почта России (tariff.pochta.ru)
# RUSPOST_API_BASE можно не задавать (по умолчанию https://tariff.pochta.ru)
RUSPOST_API_BASE=https://tariff.pochta.ru
# Наш индекс отделения (для справки/логов)
RUSPOST_OFFICE_INDEX=413864
# Индекс места приёма (обязателен): этот индекс всегда уходит в поле from
RUSPOST_ACCEPTANCE_INDEX=413840
# Код объекта расчёта (обязателен, зависит от выбранного типа отправления)
RUSPOST_OBJECT_CODE=30030
